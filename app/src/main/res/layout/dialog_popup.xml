<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="15dp">

    <widgets.LatinTextView
        android:id="@+id/txtCaption"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:gravity="start|center"
        android:text="Oops!"
        android:textColor="@color/primary_text"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


    <widgets.LatinTextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="start"
        android:text="To use scheduler features, you should upgrade to premium version."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/secondary_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <widgets.MyButton
            android:id="@+id/positiveButton"
            style="@style/BorderlessButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_dialog_ok"
            android:text="Upgrade to premium"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"/>

        <widgets.MyButton
            android:id="@+id/negativeButton"
            style="@style/BorderlessButton"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dialog_cancel"
            android:text="Maybe later"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>