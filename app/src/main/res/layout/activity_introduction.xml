<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <widgets.LatinTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="Welcome to Core Vocabulary"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp">

                <widgets.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="در این اپلیکیشن ساده و جذاب قرار است پرکاربردترین لغات و اصطلاحاتی که در موضوعات مختلف استفاده می ‌شوند را یاد بگیرید که در این برنامه به آن ها Theme میگوییم."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/primary_text"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp">

                <widgets.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="برای شروع یکی از Theme ها را انتخاب کنید. هیچگونه وابستگی بین Theme ها وجود ندارد ولی پیشنهاد میکنیم آنها را به ترتیبی که تعبیه شده مطالعه نمایید."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/primary_text"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp">

                <widgets.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="آموزش هر واژه شامل تعاریف انگلیسی و فارسی بهمراه مثال‌ها و نکات مربوط برای درک کاربردهای آن می ‌باشد."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/primary_text"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp">

                <widgets.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="دسته بندی موضوعی لغات، به تقویت مهارتهای Speaking و Writing کمک شایانی می کند."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/primary_text"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp">

                <widgets.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="متد آموزشی به این گونه است که هر Theme به چندین روز تقسیم شده است و برای هر روز 6 واژه و اصطلاح تعیین شده است. برای پیروی از این متد آموزشی، میبایست هر روز و یا یک روز در میان، 6 لغت از یک تم را با یک فاصله زمانی و نه پشت سر هم مطالعه کنید."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/primary_text"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp">

                <widgets.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="آموزش خودکار: برای سادگی روند یادگیری امکانی در برنامه تعبیه شده است که در آن شما میتوانید روزهای مطالعه، ساعت شروع و فاصله زمانی بین یادآوری را تنظیم کنید، با این کار لغت ها به صورت خودکار و در زمان های تعیین شده به شما یادآوری می شوند و در نوار اعلان نمایش داده می شوند."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/primary_text"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>